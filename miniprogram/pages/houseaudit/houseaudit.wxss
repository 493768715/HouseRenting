
.box{
    width: 100%;
    height: 100%;
    position: relative;
}
.img{
    width: 100%;
    height: 100%;
    text-align: center;
}
.tit{
    height: 80rpx;
    width: 100%;
    padding: 20rpx 0 0 50rpx;
    font-size: 34rpx;
    font-weight: bold;
    border-bottom: 1rpx solid #eee;
}
.tit::before{
    display: block;
    width: 10rpx;
    height: 30rpx;
    background-color: #3ACE7E;
    content: "";
    position:absolute;
    left: 25rpx;
    top: 2%;
}
.info{

    background-color: #eee;
    padding: 1rpx 0 20rpx;
}
.info .item{
    display: flex;
    align-items: center;
    margin: 20rpx;
    padding: 20rpx;
    background-color: #fff;
}
.item image{
    width: 250rpx;
}
.item .txt{
    width: 400rpx;
    padding-left: 10rpx;
    color: 	#696969;
}
.txt .Tit{
    font-size: 34rpx;
    font-weight: bold;
}
.txt .Type,.foot{
    font-size: 30rpx;
}
.item .Taudit{
    width: 20rpx;
    margin: 0 20rpx 0 10rpx;
    color: #228B22;
}
.item .Faudit{
    width: 20rpx;
    margin: 0 20rpx 0 10rpx;
    color: #DC143C;
}
.item .audit{
    width: 20rpx;
    margin: 0 20rpx 0 10rpx;
    color: #87CEEB;
}