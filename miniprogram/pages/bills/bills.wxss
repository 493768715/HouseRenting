.box{
    width: 100%;
    height: 100%;
    background-color: #eee;
    padding: 20rpx 0 20rpx 0;
}
.img{
    width: 100%;
    height: 100%;  
    text-align: center;
}
.item{
    background-color: #fff;
    margin: 10rpx 0 10rpx 0;
}
.item .info{
    display: flex;
    padding: 20rpx;
    position: relative;
    border-bottom: 1rpx solid #eee;
}
.info image{
    width: 220rpx;
}
.txt{
    padding: 0 0 0 20rpx;
}
.txt .title{
    font-size: 34rpx;
    padding-bottom: 20rpx;
    width: 380rpx;
}
.txt .time{
    font-size: 28rpx;
    color: #808080;
}
.info .money{
    position: absolute;
    right: 10rpx;
}
.money .num{
    font-size: 28rpx;
    color: #707070;
    padding-left: 30rpx;
}
sub{
    font-size: 20rpx;
    vertical-align: bottom;
}
.other{
    display: flex;
    align-items: center;
    padding: 10rpx 20rpx 10rpx 30rpx;
}
.other .btn{
   text-align: right;
   margin-right: 10rpx;
}
.other .status{
    position: absolute;
    right: 10rpx;
    color: #228B22;
}
.other .warn{
    position: absolute;
    right: 10rpx;
    color: #DC143C;
}